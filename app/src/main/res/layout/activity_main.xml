<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/paired_list_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


<RelativeLayout
    android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/black">

    <Button
        android:layout_alignParentBottom="true"
        android:id="@+id/btn_enabled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable BT"
        android:textAllCaps="false"/>

    <Button
        android:layout_marginStart="10dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/btn_enabled"
        android:id="@+id/paired_devices_ist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paired"
        android:textAllCaps="false"/>

    <Button
        android:layout_marginStart="10dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/paired_devices_ist"
        android:id="@+id/auto_connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect"
        android:textAllCaps="false"/>

</RelativeLayout>







</RelativeLayout>